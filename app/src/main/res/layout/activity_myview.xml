<?xml version="1.0" encoding="utf-8"?>
<com.weishop.test.custom.view.MyRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.weishop.test.custom.view.MyLinearLayout
        android:id="@+id/mylinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="#ffff0000"
        android:gravity="center"
        android:orientation="vertical">

        <com.weishop.test.custom.view.MyView
            android:id="@+id/myview"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="#ffffff00"/>


        <com.weishop.test.custom.view.MyButton
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="move"/>



    </com.weishop.test.custom.view.MyLinearLayout>

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/mylinear"
        android:layout_centerHorizontal="true"
        android:src="@drawable/stat_notify_calendar" />

</com.weishop.test.custom.view.MyRelativeLayout>
